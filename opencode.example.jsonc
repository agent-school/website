{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "figma": {
      "type": "local",
      "command": ["npx", "-y", "figma-developer-mcp", "--stdio"],
      "enabled": true,
      "environment": {
        "FIGMA_API_KEY": "your-figma-api-key-here"
      }
    },
    "shadcn": {
      "type": "local",
      "command": ["npx", "-y", "@21st-dev/magic"],
      "enabled": true,
      "environment": {
        "TWENTY_FIRST_API_KEY": "your-21st-dev-api-key-here"
      }
    },
    "notion": {
      "type": "local",
      "command": ["npx", "-y", "@notionhq/notion-mcp-server"],
      "enabled": true,
      "environment": {
        "NOTION_TOKEN": "your-notion-token-here"
      }
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "firecrawl": {
      "type": "local",
      "command": ["npx", "-y", "firecrawl-mcp"],
      "enabled": true,
      "environment": {
        "FIRECRAWL_API_KEY": "your-firecrawl-api-key-here"
      }
    },
    "github": {
      "type": "local",
      "command": ["npx", "-y", "@ldraney/github-mcp"],
      "enabled": true,
      "environment": {
        "GITHUB_TOKEN": "your-github-personal-access-token-here"
      }
    },
    "miro": {
      "type": "remote",
      "url": "https://mcp.miro.com/",
      "enabled": true
    },
    "supabase": {
      "type": "local",
      "command": ["npx", "-y", "@supabase/mcp-server-supabase"],
      "enabled": true,
      "environment": {
        "SUPABASE_URL": "your-supabase-project-url-here",
        "SUPABASE_ACCESS_TOKEN": "your-supabase-access-token-here"
      }
    },
    "sequential-thinking": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-sequential-thinking"],
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp"],
      "enabled": true
    }
  }
}
